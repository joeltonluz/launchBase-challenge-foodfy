{% extends "../layout.njk"%}

{% block content %}
  <div class="title-foods">
    <h1>Gerenciar Receitas</h1>
  </div>

  <section class="list__recipes__admin">

    {% for recipe in recipes %}
      <div class="recipe__img__admin">
        <img src="{{recipe.imageLocal}}" alt="Imagem de {{recipe.title}}">
      </div>
      <div class="recipe__details__admin">
        <h1>{{recipe.title}}</h1>
        <h4>por {{recipe.author}}</h4>
        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
      </div>

    {% endfor %}

    <div class="recipe__img__admin">
        <img src="data:image/png;base64," alt="Imagem de Criar Receita">
      </div>
      <div class="recipe__details__admin">
        <h1>{{recipe.title}}
        <a href="/admin/recipes/create">Adicionar Nova Receita</a>
        </h1>
      </div>     
    

  </section>

{% endblock %}