{% extends "../layout.njk"%}

{% block content %}
  <div class="title-default">
    <h1>Gerenciar Chefs</h1>
    <a href="/admin/chefs/create">Novo Chef</a>
  </div>

  <div class="grid__chefs">
    {% for chef in chefs %}
      <div class="chef">
        <span style="background-image: url({{chef.path}})"></span>        
        <div class="infos">
          <div class="name">{{chef.name}}</div>
          <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
        </div>
      </div>
    {% endfor %}
  </div>

{% endblock %}