{% extends "../layout.njk"%}

{% block content %}
  <div class="title-default">
    <h1>Chef: {{chef.name}}</h1>
    <a href="/admin/chefs/{{chef.id}}/edit">Editar Chef</a>
  </div>

  <div class="card__chef">
    <span style="background-image: url({{chef.avatar_url}})"></span>
    <div class="name">{{chef.name}}</div>
    <div class="qtdRecipes">{{chef.total_recipes}} receitas</div>
  </div>

  <div class="title-default">
    <h1>Receitas</h1>
  </div>

  {% include 'admin/grid_recipes.njk' %}
  
{% endblock %}